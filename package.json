{
  "name": "@rwese/agent-loop-plugin",
  "version": "4.3.8",
  "description": "Minimal Task Continuation Plugin - Automatically continues sessions when incomplete tasks remain",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "prepare": "husky",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "agent",
    "loop",
    "plugin",
    "automation",
    "task-management",
    "continuation"
  ],
  "author": "OpenCode Community",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "files": [
    "dist",
    "plugin.ts",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rwese/agent-loop-plugin.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "opencode": {
    "name": "agent-loop-plugin",
    "version": "4.1.0",
    "description": "Minimal Task Continuation Plugin - Automatically continues sessions when incomplete tasks remain",
    "author": "OpenCode Community",
    "license": "MIT",
    "repository": "https://github.com/rwese/agent-loop-plugin",
    "bugs": "https://github.com/rwese/agent-loop-plugin/issues",
    "homepage": "https://github.com/rwese/agent-loop-plugin"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/rwese"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write",
    "**/*.test.ts": "npm test -- --run"
  },
  "dependencies": {}
}
