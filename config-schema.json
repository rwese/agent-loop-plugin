{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Loop Plugin Configuration",
  "description": "Configuration file for agent-loop-plugin",
  "type": "object",
  "properties": {
    "taskLoop": {
      "type": "boolean",
      "description": "Enable task loop functionality",
      "default": true
    },
    "countdownSeconds": {
      "type": "integer",
      "description": "Default countdown seconds before auto-continuation",
      "minimum": 0,
      "default": 2
    },
    "errorCooldownMs": {
      "type": "integer",
      "description": "Cooldown period in ms after errors",
      "minimum": 0,
      "default": 3000
    },
    "toastDurationMs": {
      "type": "integer",
      "description": "Toast notification duration in ms",
      "minimum": 0,
      "default": 900
    },
    "debug": {
      "type": "boolean",
      "description": "Enable debug logging",
      "default": true
    }
  },
  "additionalProperties": false,
  "default": {
    "taskLoop": true,
    "iterationLoop": true,
    "countdownSeconds": 2,
    "errorCooldownMs": 3000,
    "toastDurationMs": 900,
    "debug": true
  }
}
